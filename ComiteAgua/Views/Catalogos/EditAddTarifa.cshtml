@model ComiteAgua.ViewModels.Catalogos.CategoriasViewModel
@{
    ViewBag.Title = "Editar Tarifa";
}

<br />

@*Breadcrumb*@
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Model.UrlRetorno">Regresar</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a>Tarifas</a></li>
    </ol>
</nav>

@using (Html.BeginForm("GuardarTarifa", "Catalogos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{    
    @Html.HiddenFor(m => m.CategoriaId)   
    @Html.HiddenFor(m => m.UrlRetorno)
    @Html.HiddenFor(m => m.MesAnoFiltro)
    <div class="col-md-9 mr-auto ml-auto">
        <div class="card">
            <div class="card-header text-center">
                Categorías
            </div>
            <div class="card-body">                
                @*Mes Año*@
                <div class="form-group row">
                    @Html.LabelFor(x => x.MesAno, new { @for = "Total", @class = "col-md-2 col-form-label ml-auto" })
                    <div class="col-sm-6 mr-auto">
                        @Html.TextBoxFor(d => d.MesAno, new { @class = "form-control", @type="number" })
                        @Html.ValidationMessageFor(m => m.MesAno, null, new { @class = "badge badge-pill badge-danger" })
                    </div>
                </div>
                @*Costo Tarifa*@
                <div class="form-group row">
                    @Html.LabelFor(x => x.CostoTarifa, new { @for = "Total", @class = "col-md-2 col-form-label ml-auto" })
                    <div class="col-sm-6 mr-auto">
                        @Html.TextBoxFor(d => d.CostoTarifa, new { @class = "form-control moneda" })
                        @Html.ValidationMessageFor(m => m.CostoTarifa, null, new { @class = "badge badge-pill badge-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @*Button*@
                <div class="row">
                    <div class="mr-auto ml-auto">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

