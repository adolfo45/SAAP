@using AdsertiVS2017ClassLibrary
@model ComiteAgua.ViewModels.Catalogos.DescuentosViewModel
@{
    ViewBag.Title = @Model.Titulo;
}
<br />
@*Breadcrumb*@
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a>Descuentos</a></li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-12 text-right">
        <a href="@Url.Action("EditAddDescuento","Catalogos", new { urlRetorno = Url.Action("Descuentos", "Catalogos") })" class="btn btn-success active" role="button" aria-pressed="true" title="Agregar"><i class="fa fa-plus" aria-hidden="true"></i> Agregar</a>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="text-center">
            <h4><label>Descuentos Pronto Pago</label></h4>
        </div>
        <table id="descuentos" class="table table-hover table-bordered table-sm" style="width: 100%">
            <thead class="thead-dark text-center">
            <tr>
                <th>Mes Año</th>
                <th>Porcentaje</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model.Descuentos)
            {
                <tr class="text-center">
                    <td>@AdsertiFunciones.FormatearTexto(item.MesAno.ToString("MMM yyyy"))</td>
                    <td>@item.MontoPoncentaje%</td>
                    <th>
                        <a href="@Url.Action("EditAddDescuento", "Catalogos" , new { descuentoId = item.DescuentoId, urlRetorno = (string)ViewContext.RouteData.Values["action"]})" title="Editar"><i class="fa fa-pencil fa-lg"></i></a>
                    </th>
                </tr>
            }

            </tbody>
            <tfoot class="text-center">
            <tr>
                <th>Mes Año</th>
                <th>Porcentaje</th>
                <th></th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>






