@model ComiteAgua.ViewModels.Catalogos.CategoriasViewModel
@{
    ViewBag.Title = "Categorías";
    ViewBag.UrlRetorno = Url.Action("Index", "Home");
}

<br />

<table id="categorias" class="table table-hover table-bordered table-sm" style="width:100%">
    <thead class="thead-dark text-center">
        <tr>
            <th scope="col">Categoría</th>
            <th scope="col">Abreviatura</th>
            <th scope="col">Editar</th>
            <th scope="col">Tarifa</th>
            <th scope="col">Detalle</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Categorias)
        {
            <tr class="text-center">
                <td scope="row">@item.Nombre</td>
                <td>@item.Abreviatura</td>
                <td><a href="@Url.Action("EditAddCategoria", "Catalogos", new { categoriaId = item.CategoriaId, urlRetorno = Url.Action("Categorias", "Catalogos") })" title="Editar"><span class="fa fa-pencil fa-lg azul"></span></a></td>
                <td><a href="@Url.Action("EditAddTarifa", "Catalogos", new { categoriaId = item.CategoriaId, urlRetorno = Url.Action("Categorias", "Catalogos") })" title="Agregar Tarifa"><span class="fa fa-money fa-lg verde"></span></a></td>
                <td><a href="@Url.Action("DetalleCategoria", "Catalogos", new { categoriaId = item.CategoriaId, urlRetorno = Url.Action("Categorias", "Catalogos") })" title="Detalle"><span class="fa fa-share fa-lg azul"></span></a></td>
            </tr>
        }

    </tbody>
    <tfoot class="text-center">
        <tr>
            <th scope="col">Categoría</th>
            <th scope="col">Abreviatura</th>
            <th scope="col">Editar</th>
            <th scope="col">Tarifa</th>
            <th scope="col">Detalle</th>
        </tr>
    </tfoot>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#categorias').DataTable();
        });
    </script>
}
