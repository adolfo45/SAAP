@model ComiteAgua.ViewModels.Tomas.EstadoCuentaViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Estado de Cuenta</title>
</head>
<body>
<img src="..\..\Images\EstadoCuenta\logo.png" width="150" height="100" style="position: absolute"/>
    <br/>
    <h2 style="text-align: center">&nbsp;&nbsp;ORGANISMO INDEPENDIENTE DE AGUA POTABLE<br/>
        SAN BUENAVENTURA A.C<br/>
        PERIODO 2018
    </h2>

    <div style="font-family: sans-serif">
        <div>
            <div>
                <h3>Tipo de toma: @Model.Categoria</h3>
            </div>
            <div>
                <h3 class="text-left">Folio: @Model.Folio</h3>
            </div>
            <div>
                <h3 class="text-left">Usuario: @Model.NombrePropietario</h3>
            </div>
            <div>
                <h3>Dirección: @Model.Direccion</h3>
            </div>
        </div>
        <div>

            @*@if (Model.Pagos.Count > 0)
            {*@

            <table border=1 cellspacing=0 cellpadding=2 bordercolor="000000" style="font-size: 20px">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Año</th>
                    <th>Costo</th>
                    <th>Total</th>
                </tr>
                </thead>
                <tbody>

                @foreach (var item in Model.Tarifas.OrderByDescending(t => t.MesAno))
                {
                    <tr>
                        <td>@(++Model.Contador)</td>
                        <td style="text-align: center">@item.MesAno</td>
                        <td style="text-align: center">@item.CostoTarifa.ToString("C")</td>
                        <td style="text-align: center">@((Model.Sumatoria += item.CostoTarifa).ToString("C"))</td>
                    </tr>
                }

                </tbody>
            </table>
            @* } *@

        </div>
        <div>
            <h2>Total: @Model.Sumatoria.ToString("C")</h2>
        </div>
    </div>

</body>
</html>
