@model List<ComiteAgua.ViewModels.Tomas.TomasViewModel>
<style>
    a.disabled {
        pointer-events: none;
        cursor: default;
        color: gray;
    }
</style>

@if (Model.Count > 0)
{
    <table id="tomas" class="table table-hover table-bordered table-sm">
        <thead class="thead-dark text-center">
            <tr>
                <th scope="col">Folio</th>
                <th scope="col">Propietario</th>
                <th scope="col">Calle</th>
                <th scope="col">Colonia</th>
                <th scope="col">Periodo Pago</th>
                <th scope="col">Recibo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row" class="text-center">@item.Folio</td>
                    <td>@item.Propietario</td>
                    <td>@item.Calle</td>
                    <td>@item.Colonia</td>
                    <td>@item.UltimoPeriodoPago</td>
                    <td class="text-center"><a href="javascript:ImprimirReciboButton(@item.TomaId)" title="Agregar recibo"><i class="fa fa-plus verde"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
        <strong>Alerta!</strong> No se encontraron registros.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
    <script>
        if (@Model.Count == 0) {
            $.unblockUI();
        }
         function ImprimirReciboButton(tomaId) { 
                BloquearProcesando();
                window.location = "@Url.Action("RecibosExtraAdministracion", "Tomas")?tomaId=" + tomaId;
            };
    </script>
